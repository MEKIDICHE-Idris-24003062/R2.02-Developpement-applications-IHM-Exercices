<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="100" vgap="20"
          styleClass="root"
          stylesheets="/exercice8/Login.css"
          xmlns="http://javafx.com/javafx/17.0.12"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="fr.amu.iut.exercice8.LoginControl">

    <Text id="welcome-text" text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="User Id:" GridPane.rowIndex="1" />
    <Label text="Password:" GridPane.rowIndex="2" />

    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <HBox alignment="CENTER" spacing="20" GridPane.columnSpan="2" GridPane.rowIndex="3">
        <children>
            <Button text="Ok" onAction="#okClicked" />
            <Button text="Cancel" onAction="#cancelClicked" />
        </children>
    </HBox>

    <columnConstraints>
        <ColumnConstraints maxWidth="103.0" minWidth="63.0" prefWidth="83.0" />
        <ColumnConstraints maxWidth="143.0" minWidth="103.0" prefWidth="123.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" />
    </padding>
</GridPane>
